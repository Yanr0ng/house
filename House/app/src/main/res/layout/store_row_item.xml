<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="150dp"
android:layout_marginTop="5dp"
android:padding="8dp"
android:background="#fff"
    android:id="@+id/container">

<ImageView
    android:id="@+id/storepic"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="@drawable/loading_shape"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/store_name"
        android:text="Store Name"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/store_class"
        android:text="Store Class"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/store_phone"
        android:text="0.0"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rating_background"
        android:textStyle="bold"
        android:drawableLeft="@drawable/phone24dp"
        android:paddingRight="5dp"
        />
    <TextView
        android:textColor="#00DD00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="store inf"
        android:id="@+id/store_inf"/>


</LinearLayout>
    <TextView
        android:id="@+id/store_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text=""/>


</LinearLayout>